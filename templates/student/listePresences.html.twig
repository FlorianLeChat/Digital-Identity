{% extends 'base.html.twig' %}
{% block title %}Mes présences{% endblock %}
{% block content %}
    <div class="table">
        <h3>Liste de vos présences</h3>

        {% if presents|length %}
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Token</th>
                        <th>Formation</th>
                        <th>Matière</th>
                        <th>Prénom enseignant</th>
                        <th>Nom enseignant</th>
                        <th>Certificat de présence</th>
                    </tr>
                </thead>
                <tbody>
                    {% for present in presents %}
                        <tr>
                            <td data-label="Date">{{ present.date }}</td>
                            <td data-label="Type">{{ present.type }}</td>
                            <td data-label="Token">{{ present.token }}</td>
                            <td data-label="Formation">{{ present.nom_formation }}</td>
                            <td data-label="Matière">{{ present.nome_matiere }}</td>
                            <td data-label="Prénom enseignant">{{ present.firsname }}</td>
                            <td data-label="Nom enseignant">{{ present.lastname }}</td>
                            <td data-label="Certificat de présence"><button type="button" class="btn btn-primary"><a href="{{ path('download_certificat', {uuid: present.token}) }}">Télécharger</a></button></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>
                <i>Vous n'avez jamais été présent</i>
            </div>
        {% endif %}
    </div>
{% endblock %}